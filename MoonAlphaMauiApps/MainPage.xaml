<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoonAlphaMauiApps.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="#FF1A1A4B">
    <ContentPage.Resources>
        <ControlTemplate x:Key="RadioButtonTemplate">
            <Border
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                Stroke="#F3F2F1"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                VerticalOptions="Start"
                WidthRequest="150">
                <Grid Margin="4" WidthRequest="90">
                    <ContentPresenter />
                    <Grid
                        Margin="0,0,4,0"
                        HeightRequest="18"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        WidthRequest="18">
                        <Ellipse
                            Fill="White"
                            HeightRequest="16"
                            HorizontalOptions="Center"
                            Stroke="Transparent"
                            VerticalOptions="Center"
                            WidthRequest="16" />
                        <Ellipse
                            x:Name="check"
                            Fill="Blue"
                            HeightRequest="8"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="8" />
                    </Grid>
                </Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CheckedStates">
                            <VisualState x:Name="Checked">
                                <VisualState.Setters>
                                    <Setter Property="Stroke" Value="#FF3300" />
                                    <Setter TargetName="check" Property="Opacity" Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Unchecked">
                                <VisualState.Setters>
                                    <Setter Property="Stroke" Value="#F3F2F1" />
                                    <Setter TargetName="check" Property="Opacity" Value="0" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>

        <Style TargetType="RadioButton">
            <Setter Property="ControlTemplate" Value="{StaticResource RadioButtonTemplate}" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            <Grid
                Margin="0,0,0,20"
                BackgroundColor="#3366CC"
                VerticalOptions="Center">
                <HorizontalStackLayout VerticalOptions="Center">
                    <Image
                        Margin="10,0,10,0"
                        HeightRequest="60"
                        Source="logo.png"
                        WidthRequest="60" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="MoonAlpha Bot"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Grid>

            <Grid Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    BackgroundColor="#0a84ff"
                    CornerRadius="22"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="45"
                    Text="Info"
                   Clicked="Button_Click_1"
                    TextColor="White" />

                <Button
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    BackgroundColor="#ff3a30"
                    CornerRadius="22"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="45"
                    Clicked="Button_Clicked"
                    Text="Connect Wallet"
                    TextColor="White" />
            </Grid>
            <Grid Margin="20,0,20,20">
                <StackLayout>
                    <Label
                        FontSize="18"
                        Text="Amount"
                        TextColor="White" />

                    <FlexLayout
                        AlignItems="Start"
                        Direction="Row"
                        JustifyContent="Start"
                        Wrap="Wrap">
                        <RadioButton Value="1Sol">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="1 SOL"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="2Sol">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="2 SOL"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="5Sol">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="5 SOL"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="10Sol">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="10 SOL"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>
                    </FlexLayout>
                </StackLayout>

            </Grid>
            <Grid Margin="20,0,20,20">
                <StackLayout>
                    <Label
                        FontSize="18"
                        Text="Take Profit"
                        TextColor="White" />

                    <FlexLayout
                        AlignItems="Start"
                        Direction="Row"
                        JustifyContent="Start"
                        Wrap="Wrap">
                        <RadioButton Value="2x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="2x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="5x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="5x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="10x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="10x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>

                        <RadioButton Value="15x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="15x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton Value="20x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="20x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton Value="50x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="50x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton Value="100x">
                            <RadioButton.Content>
                                <Label
                                    HorizontalOptions="Center"
                                    Text="100x"
                                    TextColor="White" />
                            </RadioButton.Content>
                        </RadioButton>
                    </FlexLayout>
                </StackLayout>

            </Grid>
            <Grid Margin="20,0,20,20" RowDefinitions="Auto,Auto">

                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    Text=" Input Link"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <!--  TextBox (Entry in MAUI)  -->
                <Entry
                    x:Name="txtInputLink"
                    Grid.Row="1"
                    Background="White"
                    FontSize="16"
                    HeightRequest="30"
                    IsEnabled="{Binding InputLinkEnable, Mode=TwoWay}"
                    TextChanged="Entry_TextChanged" />


            </Grid>
            <Grid
                Margin="20,0,20,20"
                ColumnDefinitions="*"
                RowDefinitions="Auto">
                <Border>

                    <Editor
                        x:Name="richtxtbox"
                        BackgroundColor="#3366CC"
                        FontSize="16"
                        HeightRequest="250"
                        IsReadOnly="True"
                        TextColor="#A8FF70" />
                </Border>
            </Grid>
            <Grid Margin="20,0,20,20" ColumnDefinitions="*,Auto">
                <!--  Progress Bar Container  -->
                <Grid
                    Padding="3"
                    BackgroundColor="DarkBlue"
                    HeightRequest="40">
                    <!--  Actual Progress Bar  -->
                    <ProgressBar
                        x:Name="pbProgress"
                        BackgroundColor="Transparent"
                        HeightRequest="34"
                        HorizontalOptions="FillAndExpand"
                        Progress="0"
                        ProgressColor="LimeGreen"
                        VerticalOptions="Center" />

                    <!--  Success Text Inside Progress Bar  -->
                    <Label
                        x:Name="prgStatusLbl"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Loading..."
                        TextColor="White"
                        VerticalOptions="Center" />
                </Grid>


            </Grid>
            <Grid Margin="20,0,20,20" ColumnDefinitions="*,*">
                <Button
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    Padding="10"
                    BackgroundColor="LimeGreen"
                    BorderWidth="0"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Fill"
                    IsEnabled="{Binding StartBtnEnable, Mode=TwoWay}"
                    Text="START"
                    TextColor="White"
                    VerticalOptions="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="10"
                    BackgroundColor="Red"
                    BorderWidth="0"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Fill"
                    IsEnabled="{Binding StopBtnIsEnable, Mode=TwoWay}"
                    Text="STOP"
                    TextColor="White"
                    VerticalOptions="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid Margin="20,0,20,20" 
                  WidthRequest="70"
                  
                  HorizontalOptions="Start">
                <Button Text="Logs">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextColor" Value="White" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="BackgroundColor" Value="Gray" />
                            <Setter Property="Padding" Value="5,1" />
                            <Setter Property="BorderWidth" Value="0" />
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>



            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
