<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoonAlphaMauiApps.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="#FF1A1A4B">

    <ScrollView>
        <VerticalStackLayout>
            <Grid BackgroundColor="#3366CC" VerticalOptions="Center">
                <HorizontalStackLayout VerticalOptions="Center">
                    <Image
                        Margin="10,0,10,0"
                        HeightRequest="60"
                        Source="logo.png"
                        WidthRequest="60" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="MoonAlpha Bot"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    BackgroundColor="#0a84ff"
                    CornerRadius="22"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="45"
                    Text="Info"
                    TextColor="White" />

                <Button
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    BackgroundColor="#ff3a30"
                    CornerRadius="22"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="45"
                    Text="Connect Wallet"
                    TextColor="White" />
            </Grid>
          
            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
